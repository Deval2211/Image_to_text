        "\n",
        "import pytesseract\n",
        "from PIL import Image\n",
        "from google.colab import files\n",
        "import io\n",
        "import os # Import os module for path manipulation\n",
        "import fitz # Import fitz from PyMuPDF\n",
        "\n",
        "# Upload multiple images\n"
      ],
      "metadata": {
